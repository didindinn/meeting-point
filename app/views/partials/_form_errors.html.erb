<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
<% end %>