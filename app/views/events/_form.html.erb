<%= render "devise/shared/error_messages", resource: @event %>

<%= form_for(@event) do |f| %>
  <%#= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: t('activerecord.attributes.event.title') %>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: 'form-control', placeholder: t('activerecord.attributes.event.address') %>
  </div>

  <div class="form-group">
    <%= f.text_field :datetime, class: 'form-control', data: { behavior: "flatpickr" }, placeholder: t('activerecord.attributes.event.datetime')  %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class: 'form-control', placeholder: t('activerecord.attributes.event.description') %>
  </div>

  <div class="form-group">
    <%= f.text_field :pincode, class: 'form-control', placeholder: t('activerecord.attributes.event.pincode') %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.links.create'), class: 'btn btn-primary' %>
    <%= link_to t('devise.shared.links.back'), :back, class: 'btn btn-secondary float-right'%>
  </div>
<% end %>