<h1><%= t '.title' %></h1>
<p><%= t '.name' %>: <strong><%= @name %></strong></p>
<p><%= t '.email' %>: <strong><%= link_to @email, "mailto:#{@email}" %></strong></p>
<hr/>

<p><%= t '.event' %>: <strong><%= link_to @event.title, event_url(@event) %></strong></p>
<p><%= t '.owner' %>: <strong><%= @event.user.name %></strong></p>

<p>
  <% if @event.datetime < DateTime.current %>
    <%= t '.datetime_p' %>:
  <% else %>
    <%= t '.datetime_f' %>:
  <% end %>
  <strong><%= l @event.datetime, format: :long %></strong>
</p>