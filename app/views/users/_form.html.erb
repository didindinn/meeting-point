<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: t('activerecord.attributes.user.name') %>
  </div>

  <div class="form-group">
    <%= f.text_field :email, class: 'form-control', placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update'), class: 'btn btn-primary' %>
    <%= link_to t('devise.shared.links.back'), :back, class: 'btn btn-secondary float-right' %>
  </div>
<% end %>
